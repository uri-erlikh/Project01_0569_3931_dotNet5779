<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="TestesButton" Content="Testes"  
        Margin="10" FontSize="30" Grid.Row="0" Click="TestesButton_Click"/>

        <Button x:Name="TrainiesButton" Content="Trainies"  
        Margin="10" FontSize="30" Grid.Row="1" Click="TrainiesButton_Click"/>

        <Button x:Name="TesterstButton" Content="Testers"  
        Margin="10" FontSize="30" Grid.Row="2" Click="TesterstButton_Click"/>

    </Grid>
</Window>
